<Window x:Uid="Window_1" x:Class="Searcher.ResultsPopout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="Searcher.ico"
        Title="Results Popout" Height="300" Width="300">
    <Grid x:Uid="Grid_1">
        <RichTextBox x:Uid="TxtResults" Name="TxtResults" IsReadOnly="True" IsReadOnlyCaretVisible="True" 
                         HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <RichTextBox.LayoutTransform>
                <ScaleTransform x:Uid="ScaleTransform_1" ScaleX="{Binding Scale}" ScaleY="{Binding Scale}"/>
            </RichTextBox.LayoutTransform>
        </RichTextBox>
    </Grid>
</Window>
