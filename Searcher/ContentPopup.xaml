<Window x:Class="Searcher.ContentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Searcher"
        mc:Ignorable="d" ShowInTaskbar="False" ShowActivated="True"
        WindowStyle="None" ResizeMode="CanResize" Name="ContentPopupWindow"
        MouseEnter="ContentPopupWindow_MouseEnter" MouseLeave="ContentPopup_MouseLeave"
        Title="ContentPopup" Height="300" Width="500"
        MinHeight="200" MinWidth="400"
        MaxHeight="600" MaxWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="GrdColLineNumber" Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" IsEnabled="False" Name="TxtLineNumbers" Margin="0" AcceptsReturn="True" IsReadOnly="True" />
        <TextBox Grid.Column="1" Margin="0" Name="TxtContent" AcceptsReturn="True" IsReadOnly="True"
                 IsReadOnlyCaretVisible="True" ScrollViewer.ScrollChanged="TxtContent_ScrollChanged"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 KeyDown="TxtContent_KeyDown">
        </TextBox>
    </Grid>
</Window>
