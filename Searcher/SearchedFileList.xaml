<Window x:Class="Searcher.SearchedFileList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Searched File List" Height="300" Width="600" 
        ShowInTaskbar="False" WindowStyle="ToolWindow"
        MinHeight="300" MinWidth="500"
        KeyDown="SearchedFileList_KeyDown" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Name="BtnCopyList" Content="Copy All" HorizontalAlignment="Left" Margin="1"
                    Click="BtnCopyList_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <ListBox Name="LstFileList" SelectionMode="Extended" PreviewMouseRightButtonDown="LstFileList_PreviewMouseRightButtonDown"  />
        </Grid>
        <Grid Grid.Row="2" Name="GrdFilesExcluded" MaxHeight="80" Visibility="Collapsed">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="Temporarily Excluded" Margin="2" TextWrapping="Wrap" Width="70"/>
                <ListBox Name="LstFilesExcluded" KeyDown="LstFilesExcluded_KeyDown" SelectionMode="Extended" ToolTip="Press Delete to remove item(s)." />
            </DockPanel>
        </Grid>
        <Grid Grid.Row="3" Name="GrdFilesExcludedAlways" MaxHeight="80" Visibility="Collapsed">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="Always Excluded" Margin="2" TextWrapping="Wrap" Width="70"/>
                <ListBox Name="LstFilesAlwaysExcluded" KeyDown="LstFilesAlwaysExcluded_KeyDown" SelectionMode="Extended" ToolTip="Press Delete to remove item(s)." />
            </DockPanel>
        </Grid>
    </Grid>
</Window>
